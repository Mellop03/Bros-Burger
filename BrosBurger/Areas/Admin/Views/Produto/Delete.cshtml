@model BrosBurger.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1 class="H1Título">Deletar</h1>

<h3 class="text-light Preto2">Deseja deletar isso mesmo?</h3>
<div>
    <h4 class="text-light Preto2 w-25">Produto</h4>
    <hr>  
    <dl class="row text-light BackgroundR">
        <dt class = "col-sm-2">
            Nome do produto:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoProduto)
        </dd>
        <dt class = "col-sm-2">
            Valor:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorProduto)
        </dd>
        <dt class = "col-sm-2">
            Categoria:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.NomeCategoria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"  class="btn btn-primary">Voltar</a>
    </form>
</div>
