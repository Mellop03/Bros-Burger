@model BrosBurger.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h1 class="H1Título w-25">Detalhes</h1>

<div class="text-light"> 
    <h4 class="text-light Preto2 w-25">Produto</h4>
    <hr />
    <dl class="row text-light BackgroundR">
        <dt class = "col-sm-2">
            Nome do produto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoProduto)
        </dd>
        <dt class = "col-sm-2">
            Valor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorProduto)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.NomeCategoria)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model?.ProdutoId" class="btn btn-primary">Editar</a>
</div>
<div>
    <a asp-action="Index" class="btn btn-danger">Voltar</a>
</div>
